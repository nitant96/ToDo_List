<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Button
        android:id="@+id/red_button"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="#e91e63"
        android:gravity="center" />

    <Button
        android:id="@+id/green_button"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignTop="@+id/red_button"
        android:layout_toEndOf="@+id/yellow_button"
        android:background="#7ecb20"
        android:gravity="center" />

    <Button
        android:id="@+id/yellow_button"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignStart="@+id/red_button"
        android:layout_below="@+id/red_button"
        android:background="#FFFFE628"
        android:gravity="center" />

    <Button
        android:id="@+id/blue_button"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/green_button"
        android:layout_toEndOf="@+id/red_button"
        android:background="#4d82cb"
        android:gravity="center" />
</RelativeLayout>